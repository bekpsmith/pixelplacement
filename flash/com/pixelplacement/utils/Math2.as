package com.pixelplacement.utils{	public class Math2 {		public static function formatNumber(number:Number):String {			var numString:String=number.toString();			var result:String='';			while (numString.length > 3) {				var chunk:String=numString.substr(-3);				numString=numString.substr(0,numString.length-3);				result=','+chunk+result;			}			if (numString.length>0) {				result=numString+result;			}			return result;		}	}}