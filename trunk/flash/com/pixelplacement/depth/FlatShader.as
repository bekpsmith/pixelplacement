package com.pixelplacement.depth{	import flash.display.*;	import flash.events.*;		import caurina.transitions.Tweener;	import caurina.transitions.properties.ColorShortcuts;	ColorShortcuts.init();	public class FlatShader extends MovieClip {		public static function shade(object:MovieClip,lightAngle:uint,speed:uint):void {			var rotXLight:Number=(-(Math.abs(object.rotationX)))/lightAngle;			var rotYLight:Number=(-(Math.abs(object.rotationY)))/lightAngle;			rotXLight=rotXLight%1;			rotYLight=rotYLight%1;			var brightness:Number=Math.min(rotXLight,rotYLight);			Tweener.addTween(object,{_tintBrightness:brightness,time:speed})		}	}}