package com.pixelplacement.depth{	import flash.display.*;	import caurina.transitions.Tweener;	public class TiltControl extends MovieClip {		public static function tilt(stage:Stage,target:MovieClip,tiltAmount:uint,speed:uint):void {			var mouseXCenterDistance:Number=stage.mouseX - (stage.stageWidth/2)			var mouseYCenterDistance:Number=stage.mouseY - (stage.stageHeight/2)			var percentX : Number =mouseYCenterDistance/(stage.stageHeight/2)			var percentY : Number =mouseXCenterDistance/(stage.stageWidth/2)			var targetXRotation : Number = tiltAmount*percentX			var targetYRotation : Number = -tiltAmount*percentY			if(Math.abs(targetXRotation)>90){				targetXRotation=0			}			if(Math.abs(targetYRotation)>90){				targetYRotation=0			}			Tweener.addTween(target,{rotationY:targetYRotation,rotationX:targetXRotation,time:speed})						/*			if(Math.abs(target.rotationY)>90){				if(target.rotationY>0){					target.rotationY=90;				}else{					target.rotationY=-90;				}			}			if(Math.abs(target.rotationX)>90){				if(target.rotationX>0){					target.rotationX=90;				}else{					target.rotationX=-90;				}			}			*/		}	}}